{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@services/*": ["../common/src/services/*"],
      "@repositories/*": ["../common/src/repositories/*"],
      "@helpers/*": ["../common/src/helpers/*"]
    },
    "esModuleInterop": true
  },
  "include": [
    "./Server.ts",
    "src/**/*.ts",
    "test/**/*.ts",
    "../common/src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
